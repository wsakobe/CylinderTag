{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compile",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
                "-fexec-charset=GBK",
                "-std=c++17", 
                // 扩展参数
                // -I 头文件目录
                // -L 库文件目录
                // -l 库文件
                "-I", "D:/opencv/build/install/include",
                "-I", "D:/opencv/build/install/include/opencv2",
                "-L", "D:/opencv/build/install/x64/mingw/lib",
                "-l", "libopencv_world453"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}